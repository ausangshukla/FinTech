<p style="color: green"><%= notice %></p>
<table id="interests" class="table table-bordered dataTable">
  <tr>
    <td>
        <strong>Side</strong>
    </td>
    <td>
        <%= @interest.side %>
    </td>
  </tr>
  <tr>
    <td>
        <strong>Type</strong>
    </td>
    <td>
        <%= @interest.share_type %>
    </td>
  </tr>
  <tr>
    <td>
        <strong>Min</strong>
    </td>
    <td>
        <%= @interest.shares_min %>
    </td>
  </tr>
  <tr>
    <td>
        <strong>Max</strong>
    </td>
    <td>
        <%= @interest.shares_max %>
    </td>
  </tr>
  <tr>
    <td>
        <strong>Price per Share</strong>
    </td>
    <td>
        <%= @interest.price_per_share %>
    </td>
  </tr>
  <tr>
    <td>
        <strong>User</strong>
    </td>
    <td>
        <%= @interest.user.first_name %>
    </td>
  </tr>
  <tr>
    <td>
        <strong>Company</strong>
    </td>
    <td>
        <%= @interest.company.name %>
    </td>
  </tr>
</table>
<div>
   <%= link_to "Edit", edit_interest_path(@interest), {class: "btn btn-primary"}  %> |
   <%= link_to "Back", interests_path, {class: "btn btn-primary"}  %> |
   <%= button_to "Delete", @interest, method: :delete, class: "btn btn-danger", form_class: "deleteButton" %>
</div>